# Configuración para Railway
# Copia este archivo y renómbralo a .env para desarrollo local

# Token del bot (OBLIGATORIO)
TELEGRAM_BOT_TOKEN=tu_token_del_botfather_aqui

# Configuración de logs
LOG_LEVEL=INFO
DEBUG_MODE=false

# Configuración de seguridad
RATE_LIMIT_PER_MINUTE=10
MAX_RETRIES=3
TIMEOUT_MINUTES=30

# Configuración de archivos
DATABASE_FILE_PATH=data/bot_data.json
LOG_FILE_PATH=logs/bot.log

# Configuración de respaldo
DATABASE_BACKUP_INTERVAL=3600
LOG_BACKUP_COUNT=5
LOG_MAX_FILE_SIZE=5242880
DATABASE_MAX_FILE_SIZE=10485760
