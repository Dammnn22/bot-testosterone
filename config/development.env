# Development Environment Configuration
# Copy this file to .env for development setup

# Bot Configuration
TELEGRAM_BOT_TOKEN=your_development_bot_token_here
DEBUG_MODE=true
LOG_LEVEL=DEBUG

# Rate Limiting (more lenient for development)
RATE_LIMIT_PER_MINUTE=20
MAX_RETRIES=5
TIMEOUT_MINUTES=60

# Storage Configuration
DATABASE_FILE_PATH=data/bot_data_dev.json
LOG_FILE_PATH=logs/bot_dev.log

# Logging Configuration
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=10

# Cleanup Configuration
DATABASE_BACKUP_INTERVAL=7200
DATABASE_MAX_FILE_SIZE=20971520

# Development-specific settings
ENABLE_DETAILED_LOGGING=true
ALLOW_TEST_USERS=true
SKIP_RATE_LIMITING_FOR_ADMINS=true