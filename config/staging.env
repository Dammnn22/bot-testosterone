# Staging Environment Configuration
# Copy this file to .env for staging setup

# Bot Configuration
TELEGRAM_BOT_TOKEN=your_staging_bot_token_here
DEBUG_MODE=false
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_PER_MINUTE=15
MAX_RETRIES=3
TIMEOUT_MINUTES=30

# Storage Configuration
DATABASE_FILE_PATH=data/bot_data_staging.json
LOG_FILE_PATH=logs/bot_staging.log

# Logging Configuration
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=7

# Cleanup Configuration
DATABASE_BACKUP_INTERVAL=3600
DATABASE_MAX_FILE_SIZE=15728640

# Staging-specific settings
ENABLE_PERFORMANCE_MONITORING=true
SIMULATE_PRODUCTION_LOAD=false
ENABLE_SECURITY_ALERTS=true